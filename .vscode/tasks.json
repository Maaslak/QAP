{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "main build",
            "command": "/usr/bin/g++",
            "args": [
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Solution.cpp",
                "-o",
                "${workspaceFolder}/build/main",
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}